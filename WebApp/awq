from awq import AutoAWQForCausalLM
from transformers import AutoTokenizer


model_path = '/home/rickychen/桌面/llm/LLaMA-Factory/models/8b'
quant_path = '/home/rickychen/桌面/llm/LLaMA-Factory/models/8bawq'
quant_config = { "zero_point": True, "q_group_size": 128, "w_bit": 4, "version": "GEMM", "modules_to_not_convert": []}

# Load model
model = AutoAWQForCausalLM.from_pretrained(model_path)
tokenizer = AutoTokenizer.from_pretrained(model_path, trust_remote_code=True)

# Quantize
model.quantize(tokenizer, quant_config=quant_config)

# Save quantized model
model.save_quantized(quant_path)
tokenizer.save_pretrained(quant_path)